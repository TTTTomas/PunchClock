<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    >

<Button 
	android:text="Start" 
	android:id="@+id/Punchclock_StartButton" 
	android:layout_width="fill_parent" 
	android:layout_height="wrap_content"

	android:layout_above="@+id/Punchclock_BreakButton"
	/>

<Button 
	android:text="Break" 
	android:id="@+id/Punchclock_BreakButton" 
	android:layout_width="fill_parent" 
	android:layout_height="wrap_content"
	
	android:layout_above="@+id/Punchclock_EntriesButton"
	/>

<Button 
	android:text="Entries" 
	android:id="@+id/Punchclock_EntriesButton" 
	android:layout_width="fill_parent" 
	android:layout_height="wrap_content"
	
	android:layout_alignParentBottom="true"
	/>
	
<TextView 
	android:text="" 
	android:id="@+id/punchclock_status_text" 
	android:layout_width="fill_parent" 
	android:layout_height="wrap_content"

	android:layout_above="@+id/Punchclock_StartButton"
	/>

</RelativeLayout>
