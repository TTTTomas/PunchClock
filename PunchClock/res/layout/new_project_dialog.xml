<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:orientation="vertical"
  android:layout_width="fill_parent"
  android:layout_height="wrap_content">
    
	<TextView
    	android:id="@+id/Title"
    	android:text="New Project"
    	android:textSize="20dp"
		android:layout_width="fill_parent"
  		android:layout_height="wrap_content"
  		
  		android:layout_margin="5dp"
  		android:layout_alignParentTop="true"
  		android:layout_alignParentLeft="true"
  		android:layout_alignParentRight="true"
	/>
    
	<ImageView
    	android:id="@+id/TitleSeparator"	
	  	android:layout_below="@+id/Title"
	    android:src="@android:drawable/divider_horizontal_dark"
	    android:layout_width="fill_parent"
	    android:layout_height="wrap_content"
 	 	android:scaleType="fitXY"
   		android:paddingLeft="5dp"
   		android:paddingRight="5dp"
    	android:paddingBottom="2dp"
    	android:paddingTop="2dp" 
    />


	<TextView
    	android:id="@+id/NewProject_NameLabel"
    	android:text="Project name"
		android:layout_width="fill_parent"
  		android:layout_height="wrap_content"
  		android:layout_below="@+id/TitleSeparator"
  		
  		android:layout_margin="5dp"
  		android:layout_alignParentLeft="true"
  		android:layout_alignParentRight="true"
	/>
	<EditText 
    	android:id="@+id/NewProject_NameEdit"
		android:layout_width="fill_parent"
  		android:layout_height="wrap_content"
  		
  		android:layout_margin="5dp"
  		android:layout_below="@+id/NewProject_NameLabel"
  		android:layout_alignParentLeft="true"
  		android:layout_alignParentRight="true"
	/>


    
    <RelativeLayout 
    	android:id="@+id/OkCancelPanel"
    	android:layout_alignParentBottom="true"
    	android:layout_alignParentLeft="true"
    	android:layout_alignParentRight="true"
		android:layout_width="fill_parent"
  		android:layout_height="60dp"
    >
	    <View 
	    	android:id="@+id/CenterMarker"
	  		android:layout_centerHorizontal="true"
	    	android:layout_alignParentTop="true"
			android:layout_width="0dp"
	  		android:layout_height="0dp"
	    />
	    
	    <Button 
	    	android:id="@+id/NewProject_OkButton"
	    	android:text="OK"
			android:layout_width="fill_parent"
	  		android:layout_height="wrap_content"
	  		android:layout_centerHorizontal="true"
	    	android:layout_alignParentBottom="true"
	    	android:layout_alignParentTop="true"
	    	android:layout_alignParentLeft="true"
	  		android:layout_toLeftOf="@+id/CenterMarker"
	  		android:layout_marginTop="5dp"
	  		android:layout_marginLeft="3dp"
	  		android:layout_marginRight="0dp"
	  		android:layout_marginBottom="0dp"
	    	/>
	    <Button 
	    	android:id="@+id/NewProject_CancelButton"
	    	android:text="Cancel"
			android:layout_width="fill_parent"
	  		android:layout_height="wrap_content"
	  		android:layout_centerHorizontal="true"
	    	android:layout_alignParentBottom="true"
	    	android:layout_alignParentTop="true"
	    	android:layout_alignParentRight="true"
	  		android:layout_toRightOf="@+id/CenterMarker"
	  		android:layout_marginTop="5dp"
	  		android:layout_marginLeft="0dp"
	  		android:layout_marginRight="3dp"
	  		android:layout_marginBottom="0dp"
	    	/>
    </RelativeLayout>
    
</RelativeLayout>
    